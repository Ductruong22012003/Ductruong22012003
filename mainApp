
import common.inOutUtils;
import java.util.Arrays;
import java.util.Random;
import java.util.Scanner;


public class MainApp {

    private static int[] array;  
    
    public static void main(String[] args) {
        createArray();
        printArray("Unsorted Array: ");
        sortArray();
        printArray("Sorted Array: ");       
    }
    
    //create random array with n elements (n is a positive integer number)
    public static void createArray(){       
         Scanner sc = new Scanner(System.in);
         Random generator = new Random();
         System.out.println("Enter number of array: ");
        int n=inOutUtils.inputInt( 0, 1000);
        array = new int[n];
        for(int i = 0; i < array.length; i++){
            array[i] = generator.nextInt(10);
        }
    }
    
     //sort array
    private static void sortArray(){        
        for(int i = 0; i < array.length-1; i++){           
            for(int j = 0; j<array.length-1-i; j++){
               if(array[j]>array[j+1]){
                int temp = array[j];
                array[j] = array[j+1];
                array[j+1] = temp;
                
               }                
            }          
        }
        
    }
    
    //display array
    private static void printArray(String msg){       
        inOutUtils.printMsg(msg + Arrays.toString(array));
    }
}
